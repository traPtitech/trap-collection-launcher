{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@api/*": ["api/*"],
      "@/*": ["src/*"]
    },
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
